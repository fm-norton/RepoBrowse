<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="@dimen/cardCornerRadius"
    card_view:cardElevation="@dimen/cardElevation"
    android:layout_marginTop="@dimen/card_margin"
    android:layout_marginBottom="@dimen/card_margin"
    android:layout_marginStart="@dimen/card_margin"
    android:layout_marginEnd="@dimen/card_margin"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/userCard">

    <RelativeLayout
        android:id="@+id/userCardLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/avatar"
            android:layout_width="@dimen/card_avatar_size"
            android:layout_height="@dimen/card_avatar_size"
            android:layout_marginStart="@dimen/card_avatar_margin"
            android:layout_marginTop="@dimen/card_avatar_margin"
            android:layout_marginBottom="@dimen/card_avatar_margin"/>

        <TextView
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/username_card_margin"
            android:text="@string/username"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/reposText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/avatar"
            android:layout_toEndOf="@+id/avatar"
            android:paddingEnd="@dimen/repostext_card_padding"
            android:paddingStart="@dimen/repostext_card_padding"
            android:text="@string/url" />
    </RelativeLayout>

</android.support.v7.widget.CardView>